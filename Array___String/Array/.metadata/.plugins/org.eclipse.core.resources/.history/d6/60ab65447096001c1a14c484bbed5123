#include "stdio.h"

int main()
{
	int i,n;
	float avr=0;
	float arr1[100];
	printf("Enter the number of data:");
	fflush(stdin); fflush(stdout);
	scanf("%d",&n);
	for(i=0;i<n; i++)
	{
		printf("Enter number:");
			fflush(stdin); fflush(stdout);
			scanf("%d",&arr1[i]);
	}
	for(i=0;i<n; i++)
		{
		avr+=arr1[i];
		}
	avr/=n;
	printf("Average = %f", avr);
	return 0;
}
